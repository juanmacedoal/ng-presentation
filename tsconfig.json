{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "annotateForClosureCompiler": false
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "no-redundant-jsdoc": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "core-components": [
        "dist/core-components"
      ],
      "core-components/*": [
        "dist/core-components/*"
      ]
    }
  }
}